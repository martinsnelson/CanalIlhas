<style>

    /* Estilize o vídeo: 100% de largura e altura para cobrir toda a janela */
    #video {
        position: fixed;
        right: 0;
        bottom: 0;
        min-width: 100%;
        min-height: 100%;
        z-index: -1000;
        width: auto;
        height: auto;
    }

    /* Adicione algum conteúdo na parte inferior do vídeo / página */
    .content {
        position: fixed;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        color: #f1f1f1;
        width: 100%;
        padding: 20px;
    }

    /* Estilo o botão usado para pausar / reproduzir o vídeo */
    #videoBtn {
        width: 200px;
        font-size: 18px;
        padding: 10px;
        border: none;
        background: #000;
        color: #fff;
        cursor: pointer;
    }

    #videoBtn:hover {
        background: #ddd;
        color: black;
    }
</style>

<!-- O video -->
<video autoplay muted loop id="video">
    @*<source src="movie.mp4" type="video/mp4">*@
    <source src="~/uploads/segurança no asp.net core - aula 1- introdução.mp4" type="video/mp4">
    <source src="~/uploads/segurança no asp.net core - aula 3- roles e claims.mp4" type="video/mp4">
    @*<source src="foo.ogg" type="video/ogg; codecs=dirac, speex">*@
    @*<source src="movie.ogg" type="video/ogg">*@
    Seu navegador não suporta a tag de vídeo.
</video>


<!-- Opcional: algum texto de sobreposição para descrever o vídeo -->
<div class="content">
    <h1>Titulo</h1>
    <p>Descrição...</p>
    <!-- Use um botão para pausar / reproduzir o vídeo com JavaScript -->
    <button id="videoBtn" onclick="myFunction()">Pause</button>
</div>

<script>
    // 
    var video = document.getElementById("video");

    // 
    var btn = document.getElementById("videoBtn");

    window.onload = function () {
        console.log('Onload disparado');
        teste();
        //maxWindow()
    }

    
    // 
    function myFunction() {
        if (video.paused) {
            video.play();
            btn.innerHTML = "Pause";
        } else {
            video.pause();
            btn.innerHTML = "Play";
        }
    }

    function maxWindow() {
        window.moveTo(0, 0);

        if (document.all) {
            top.window.resizeTo(screen.availWidth, screen.availHeight);
        }

        else if (document.layers || document.getElementById) {
            if (top.window.outerHeight < screen.availHeight || top.window.outerWidth < screen.availWidth) {
                top.window.outerHeight = screen.availHeight;
                top.window.outerWidth = screen.availWidth;
            }
        }
    }

    function teste() {
        var elem = document.getElementById("video");
        if (elem.requestFullscreen) {
            elem.requestFullscreen();
        } else if (elem.mozRequestFullScreen) {
            elem.mozRequestFullScreen();
        } else if (elem.webkitRequestFullscreen) {
            elem.webkitRequestFullscreen();
        } else if (elem.msRequestFullscreen) {
            elem.msRequestFullscreen();
        }
    }

</script>

